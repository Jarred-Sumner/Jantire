<%= javascript_include_tag "grade_assignment" %>
<div id="grade">
  <div id="answer_container">
    <div id="title">To-Grade List:</div>
    <div id="answers">
      <% (0..@grades.size - 1).each do |i| %>
        <% if i == 0 %>
          <div id="<%= i %>" class="answer first active">
            <div class="student_name"><%= @grades[i].user.first_name + " " + @grades[i].user.last_name %></div>
          </div>
        <% else %>
          <div id="<%= i %>" class="answer">
            <div class="student_name"><%= @grades[i].user.first_name + " " + @grades[i].user.last_name %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="work">
    <div id="grading_who"><div id="current_student">Nobody</div>'s homework</div>
    <div id="scribd">

    </div>
    <div id="custom_score_popup" title="Set a score">
      Score: <input type="number" id="custom_score_input"></input> out of <%= @assignment.score.to_s %>
    </div>
    <div id="toolbar">
      <div id="note" title="Add a Note"><%= image_tag "notepad.png" %></div>
      <div id="none" title="No Credit"><%= image_tag "minus.png" %></div>
      <div id="half" title="Half Credit">âœ“</div>
      <div id="full" title="Full Credit" ><%= image_tag "plus.png" %></div>
      <h3 id="custom_score" title="Manually set a score"><%= image_tag "gear.png" %></h3>
     </div>
  </div>  
  <div title="Grading Complete" id="grading_complete">
    <p>There are no more ungraded answers. Are you done here?</p>
  </div>
  <div title="Add a Note" id="notes">
    <textarea id="notes_text" placeholder="Type your note here"></textarea>
  </div>
</div>
