<div class="devise">
  <h2>Resend confirmation instructions</h2>

  <%= semanticform_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.input :email %>
    <%= f.submit "Resend confirmation instructions", :id => "submit" %>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>